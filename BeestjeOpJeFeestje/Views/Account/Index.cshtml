@model List<Account>

<a class="btn btn-primary mb-3" asp-action="Create">
    Nieuw account
</a>

<table class="table table-responsive table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th>Naam</th>
            <th>E-mail</th>
            <th>Adres</th>
            <th>Telefoonnummer</th>
            <th>Acties</th>
        </tr>
    </thead>
    
    <tbody>
        @foreach (Account account in Model)
        {
            <tr>
                <td>@account.Name</td>
                <td>@account.Email</td>
                <td>@account.Address</td>
                <td>@account.PhoneNumber</td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@account.Id">Bewerken</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@account.Id">Verwijderen</a>
                </td>
            </tr>
        }
    </tbody>
</table>
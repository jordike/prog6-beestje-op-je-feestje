@model List<ViewOwnBookingViewModel>
@{
    ViewData["Title"] = "Mijn boekingen";
}

<table class="table table-hover table-responsive table-striped table-bordered">
    <thead>
        <tr>
            <th>Datum</th>
            <th>Bevestigd</th>
            <th>Beestjes</th>
            <th>Prijs</th>
            <th>Korting</th>
            <th>Acties</th>
        </tr>
    </thead>
    
    <tbody>
        @foreach (ViewOwnBookingViewModel booking in Model)
        {
            <tr>
                <td>@booking.Booking.Date.ToString("d-MM-yyyy")</td>
                <td>@(booking.Booking.IsConfirmed ? "Ja" : "Nee")</td>
                <td>@booking.Booking.Animals.Count</td>
                <td>@booking.Price $</td>
                <td>@booking.TotalDiscount%</td>
                <td>
                    <a class="btn btn-primary" asp-action="View" asp-route-id="@booking.Booking.Id">Bekijken</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@booking.Booking.Id">Verwijderen</a>
                </td>
            </tr>
        }
        
        @if (Model.Count == 0)
        {
            <tr>
                <td colspan="6" class="text-muted text-center">U heeft nog geen boekingen.</td>
            </tr>
        }
    </tbody>
</table>

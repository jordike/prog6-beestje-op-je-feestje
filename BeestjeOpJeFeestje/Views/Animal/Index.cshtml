@model List<Animal>
@{
    ViewData["Title"] = "Beestjes";
}

<div class="container my-5">
    <h1 class="text-center mb-4">Beestjes</h1>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center">Er zijn nog geen Beestjes</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Naam</th>
                        <th scope="col">Type</th>
                        <th scope="col">Prijs</th>
                        <th scope="col">Afbeelding</th>
                        <th scope="col">Acties</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var animal in Model)
                    {
                        <tr>
                            <td>@animal.Name</td>
                            <td>@animal.Type</td>
                            <td>€ @animal.Price.ToString("F2")</td>
                            <td>
                                <img src="@animal.ImageURL" alt="@animal.Name" class="img-thumbnail" style="width: 100px;">
                            </td>
                            <td>
                                <a class="btn btn-primary btn-sm" asp-action="Read" asp-route-id="@animal.Id">Bekijk</a>
                                <a class="btn btn-secondary btn-sm" asp-action="Update" asp-route-id="@animal.Id">Aanpassen</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <a class="btn btn-success" asp-action="Create">Nieuw Beestje Toevoegen</a>
</div>
